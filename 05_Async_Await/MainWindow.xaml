<Window x:Class="_05_Async_Await.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_05_Async_Await"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Margin="10,50,0,50" FontFamily="Arial" FontStyle="Italic">Enter a number:</Label>
        <TextBox Name="numb" Grid.Column="1" Height="30" VerticalAlignment="Top" Margin="10,50,10,50" VerticalContentAlignment="Center"></TextBox>
        <Button Click="Button_Click" Grid.Column="2" Width="143" Height="79" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,10,50" FontSize="20" FontWeight="Bold" FontStyle="Italic" FontFamily="Verdana" >Calculate</Button>

        <Label Grid.Row="1" Margin="10,50,0,50" FontFamily="Arial" FontStyle="Italic" HorizontalContentAlignment="Center">Results:</Label>
        <ListBox Name="lbres" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="20"></ListBox>

    </Grid>
</Window>
